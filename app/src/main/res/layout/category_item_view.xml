<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text"
        android:gravity="center"
        android:paddingLeft="@dimen/small_125"
        android:paddingRight="@dimen/small_125"
        android:textSize="@dimen/normal_100_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/category" />

    <LinearLayout
        android:layout_width="@dimen/small_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_name">

        <View
            android:id="@+id/category_underline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_small_75"
            android:layout_marginTop="@dimen/small_50"
            android:background="@drawable/rounded_corner_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_name" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>