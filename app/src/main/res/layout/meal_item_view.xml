<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/meal_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/meal_card_padding"
        android:background="@drawable/rounded_corner_text"
        android:backgroundTint="@color/dark_gray"
        android:gravity="center|bottom"
        android:padding="@dimen/meal_padding"
        android:textSize="@dimen/meal_size"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4"
        tools:text="Veggie tomato mix" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/meal_card_padding"
        android:background="@drawable/rounded_corner_image"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="@+id/meal_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>